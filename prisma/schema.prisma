generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  revoked   Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                        String         @id @default(uuid())
  email                     String         @unique
  password                  String
  name                      String
  birthdate                 DateTime?
  language                  String?        @default("indeterminado")
  timezone                  String?        @default("UTC")
  phone                     String?        @default("sin_telefono")
  username                  String         @unique @default("default_username")
  status                    UserStatus     @default(ACTIVE)
  role                      Role           @default(USER)
  lastLoginAt               DateTime?
  lastLoginIp               String?
  createdAt                 DateTime       @default(now())
  updatedAt                 DateTime       @default(now()) @updatedAt
  verified                  Boolean        @default(false)
  verifyToken               String?
  verifyTokenExpires        DateTime?
  avatarUrl                 String?
  passwordChangedAt         DateTime?
  passwordResetToken        String?
  passwordResetTokenExpires DateTime?

  clients                   Client[]
  orders                    Order[]
  products                  Product[]
  refreshTokens             RefreshToken[]
  cashSessions              CashSession[]
  cashMovements             CashMovement[]
  storeUsers                StoreUsers[]
  stores                    Store[]
  storeProducts             StoreProduct[]
  // auditoría de anulaciones
  ordersCanceled Order[] @relation("OrderCanceledBy")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?  
  basePrice   Float?   // precio de venta sugerido
  buyCost     Float?   // costo de adquisición del producto
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String?  // si quieres registrar quién lo creó
  createdBy   User?    @relation(fields: [createdById], references: [id])

  storeProducts StoreProduct[]
}

model StoreProduct {
  id            String   @id @default(uuid())
  price         Float    // precio que esta tienda aplica
  stock         Int      @default(0) // unidades disponibles en esta tienda
  stockThreshold Int     @default(1) // alerta de stock mínimo
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  storeId String
  store   Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  orderProducts OrderProduct[]
}

model OrderProduct {
  id        String  @id @default(uuid())
  quantity  Int     @default(1)
  price     Float
  buycost   Float   @default(0)
  productId String
  orderId   String
  order     Order        @relation(fields: [orderId], references: [id])
  product   StoreProduct @relation(fields: [productId], references: [id])
}

model Client {
  id        String   @id @default(uuid())
  name      String?
  email     String?  @unique
  phone     String?
  address   String?
  ruc       String?  @unique
  dni       String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: SetNull)

  orders    Order[]
}

model Order {
  id            String         @id @default(uuid())
  orderNumber   String         @unique @default("ORD-0000")
  totalAmount   Float
  status        SaleStatus     @default(PENDING)
  isPriceModified Boolean       @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now()) @updatedAt
  
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  clientId      String
  client        Client         @relation(fields: [clientId], references: [id])

  cashSessionsId String?
  cashSession    CashSession?    @relation(fields: [cashSessionsId], references: [id])

  cashMovements CashMovement[]
  orderProducts OrderProduct[]
  services      Service[]

  // auditoría de anulaciones
  canceledAt     DateTime?
  canceledById   String?
  canceledBy     User?       @relation("OrderCanceledBy", fields: [canceledById], references: [id])
}

model Service {
  id          String        @id @default(uuid())
  type        ServiceType   @default(REPAIR)
  status      ServiceStatus @default(IN_PROGRESS)
  name        String
  description String
  photoUrls   String[]      @default([])
  price       Float
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  orderId     String
  order       Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Payment {
  id        String            @id @default(uuid())
  type      PaymentType       @default(EFECTIVO)
  amount    Float

  sourceType PaymentSourceType
  sourceId   String
  
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

model CashSession {
  id              String   @id @default(uuid())
  openedAt        DateTime @default(now())
  closedAt        DateTime?
  openedById      String
  closedById      String?
  status          SessionStatus @default(OPEN)
  openingAmount   Float
  closingAmount   Float?

  StoreId         String
  Store           Store         @relation(fields: [StoreId], references: [id])

  UserId          String
  User            User          @relation(fields: [UserId], references: [id])

  // relaciones
  cashMovements       CashMovement[]
  orders              Order[]
}

model CashMovement {
  id            String      @id @default(uuid())
  sessionId     String
  type          MovementType
  amount        Float
  description   String?
  createdAt     DateTime    @default(now())

  relatedOrderId  String?
  order           Order?       @relation(fields: [relatedOrderId], references: [id])

  CashSessionId String
  CashSession   CashSession @relation(fields: [CashSessionId], references: [id])

  UserId        String
  User          User        @relation(fields: [UserId], references: [id])
}

model Store {
  id        String      @id @default(uuid())
  name      String
  address   String?
  phone     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdById String?
  createdBy   User? @relation(fields: [createdById], references: [id], onDelete: Cascade)

  cashSessions        CashSession[]
  storeUsers          StoreUsers[]
  storeProducts       StoreProduct[]
}

model StoreUsers {
  id        String      @id @default(uuid())  
  
  storeId   String
  store     Store       @relation(fields: [storeId], references: [id])

  userId    String
  user      User        @relation(fields: [userId], references: [id])
}

enum PaymentType {
  EFECTIVO
  TARJETA
  TRANSFERENCIA
  YAPE
  PLIN
  OTRO
}

enum PaymentSourceType {
  ORDERPRODUCT
  SERVICE
}

enum SessionStatus {
  OPEN
  CLOSED
}

enum MovementType {
  INCOME
  EXPENSE
}

enum SaleStatus {
  COMPLETED
  CANCELLED
  PENDING
}

enum ServiceStatus {
  IN_PROGRESS
  COMPLETED
  DELIVERED
  PAID
  ANNULLATED
}

enum ServiceType {
  REPAIR
  WARRANTY
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}
